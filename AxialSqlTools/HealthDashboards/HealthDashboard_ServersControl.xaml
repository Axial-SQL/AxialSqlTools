<UserControl x:Class="AxialSqlTools.HealthDashboards.HealthDashboard_ServersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="1000"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" HorizontalAlignment="Center">HealthDashboard_Servers</TextBlock>

            <DataGrid x:Name="MyDataGrid"  AutoGenerateColumns="False" Height="220">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Column 1" Binding="{Binding Property1}" Width="200" />
                    <DataGridTextColumn Header="Column 2" Binding="{Binding Property2}" Width="200" />
                    <!-- Add more columns as needed -->
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</UserControl>
