<Window x:Class="AxialSqlTools.SavedConnectionPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Saved Connection"
        Height="320"
        Width="420"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="HeaderTextBlock" FontWeight="Bold" FontSize="14" />
        <ListBox Name="ConnectionsListBox"
                 Grid.Row="1"
                 Margin="0,10,0,10"
                 DisplayMemberPath="DisplayName" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Select" Width="90" Click="SelectButton_Click" />
            <Button Content="Cancel" Width="90" Margin="8,0,0,0" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
