                                    <TextBox Grid.Row="1" Grid.Column="3" Height="23" x:Name="TextBox_SourcePsqlUsername" Margin="0,0,8,0" />
                                    <PasswordBox Grid.Row="1" Grid.Column="4" Height="23" x:Name="PasswordBox_SourcePsqlPassword" />
                                </Grid>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"  Margin="5,5,5,5">
                                <Button Height="35" Content="Select Target" Click="Button_SelectTargetFromPsql_Click" x:Name="Button_SelectTargetFromPsql" Width="120" FontWeight="Bold"/>
                                <Label Content="Target Description" x:Name="Label_TargetDescriptionFromPsql" VerticalAlignment="Center"/>
