<UserControl x:Class="AxialSqlTools.SqlServerBuildsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0" xmlns:axialsqltools="clr-namespace:AxialSqlTools"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="SQLServerBuilds">
    
    <Grid>
        <Label Content="Data source: https://aka.ms/sqlserverbuilds" />
        <TreeView x:Name="sqlVersionTreeView" Margin="0,25,0,0">
            <TreeView.Resources>
                <!-- Style for Grid-like Row -->
                <Style TargetType="TreeViewItem">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </TreeView.Resources>

            <TreeViewItem Header="SQL Versions" IsExpanded="True" FontSize="16" FontWeight="Bold" Foreground="DarkBlue"/>
        </TreeView>
    </Grid>
</UserControl>
