<UserControl x:Class="AxialSqlTools.SettingsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DesignHeight="300"
             Name="MyToolWindow" Width="390.517">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" HorizontalAlignment="Left">Axial SQL Tools | Settings</TextBlock>
            <Button Content="Download Axial SQL Query Library from GitHub" Click="buttonDownloadAxialScripts_Click" Height="34" x:Name="buttonDownloadDefaultAxialScripts" />




            <GroupBox Header="Query Templates Location">
                <StackPanel Orientation="Horizontal">
                    <TextBox Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text=""  x:Name="ScriptFolder" Width="277" />
                    <Button Margin="5" Content="Save" x:Name="button_SaveScriptFolder" Click="Button_SaveScriptFolder_Click" Width="50" />

                </StackPanel>

            </GroupBox>

        </StackPanel>
    </Grid>
</UserControl>
